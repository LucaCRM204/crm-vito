<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Lead</title>
  <style>
    body{font-family:system-ui,Arial;padding:16px;background:#0b0f14;color:#e6eef7}
    a{color:#61dafb;text-decoration:none}
    .box{background:#0f172a;border:1px solid #1f2937;border-radius:8px;padding:16px;margin-bottom:12px}
    .row{display:grid;grid-template-columns:1fr 1fr;gap:12px}
    input,select,textarea{background:#111827;color:#e6eef7;border:1px solid #1f2937;padding:8px;border-radius:6px}
    textarea{width:100%;min-height:80px}
    button{padding:8px 12px;border:0;background:#2563eb;color:#fff;border-radius:6px;cursor:pointer}
    ul{margin:0;padding-left:18px}
    .pill{padding:4px 8px;border-radius:12px;background:#1f2937;margin-left:8px}
  </style>
</head>
<body>
  <a href="/app/leads">← Volver</a>
  <h2 style="margin:8px 0">
    <%= lead.nombre || 'Lead' %>
    <span class="pill"><%= lead.estado %></span>
  </h2>

  <div class="box">
    <div class="row">
      <div><b>Teléfono:</b> <%= lead.telefono %></div>
      <div><b>Creado:</b> <%= new Date(lead.createdAt).toLocaleString() %></div>
      <div><b>Marca:</b> <%= lead.marca || '—' %></div>
      <div><b>Modelo:</b> <%= lead.modelo || '—' %></div>
      <div><b>Forma de pago:</b> <%= lead.formaPago || '—' %></div>
      <div><b>Usado:</b> <%= lead.infoUsado || '—' %></div>
      <div><b>Supervisor:</b> <%= lead.supervisor?.nombre || '—' %></div>
      <div><b>Vendedor:</b> <%= lead.vendedor?.nombre || '—' %></div>
    </div>
  </div>

  <div class="box">
    <form method="post" action="/app/leads/<%= lead.id %>/estado" style="display:flex;gap:8px;align-items:center;flex-wrap:wrap">
      <label><b>Cambiar estado:</b></label>
      <select name="estado">
        <% estados.forEach(es=>{ %>
          <option value="<%= es %>" <%= lead.estado===es?'selected':'' %>><%= es %></option>
        <% }) %>
      </select>
      <button>Guardar</button>
    </form>
  </div>

  <div class="box">
    <b>Notas / actividad</b>
    <form method="post" action="/app/leads/<%= lead.id %>/nota" style="margin:8px 0">
      <textarea name="text" placeholder="Agregar nota (solo interna, no se envía al cliente)"></textarea>
      <div style="margin-top:8px">
        <button>Agregar nota</button>
      </div>
    </form>
    <ul>
      <% (lead.messages||[]).forEach(m => { %>
        <li>
          <%= new Date(m.createdAt).toLocaleString() %> — 
          <%= m.fromBot ? 'Nota interna' : 'Cliente' %>:
          <%= m.text %>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
